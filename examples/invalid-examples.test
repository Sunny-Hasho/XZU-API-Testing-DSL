// Invalid TestLang++ Examples for Error Demonstration

// Error 1: Identifier cannot start with digit
let 2a = "x";

// Error 2: Body must be string
POST "/api/login" {
  body = 123;
}

// Error 3: Status must be integer
expect status = "200";

// Error 4: Missing semicolon
GET "/api/users/42" expect status = 200;

// Error 5: Undefined variable
test InvalidVar {
  GET "/api/users/$undefinedVar";
  expect status = 200;
}
