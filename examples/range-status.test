// XZU Range Status Demo
// Demonstrates the range status check feature

config {
  base_url = "http://localhost:8080";
  header "Content-Type" = "application/json";
}

let userId = 42;

// Test with range status check for 2xx success
test TestSuccessRange {
  GET "/api/users/$userId";
  expect status in 200..299;
  expect body contains "\"id\":42";
}

// Test with both methods
test TestBothMethods {
  GET "/api/users/$userId";
  expect status in 200..299;  // Any 2xx success
  expect status = 200;        // Exact status
  expect body contains "\"id\":42";
  expect body contains "\"username\":";
}

